<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">#ff00ff</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>


    <style name="RepeatButtonStyle">
        <item name="android:textColor">@color/no_pagination_error_background</item>
        <item name="android:text">@string/no_pagination_network_error_button</item>
    </style>

</resources>