<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_3ssp"
    android:layout_marginStart="@dimen/_5ssp"
    android:layout_marginTop="@dimen/_8ssp"
    app:cardElevation="1dp"
    android:layout_marginEnd="@dimen/_5ssp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:src="@drawable/after_delete"
                android:adjustViewBounds="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="bottom|center"
                android:alpha="0.8"
                android:fontFamily="@font/poppinsbold"
                android:text="Ready for shipment"
                android:textColor="@color/quantum_googgreen900"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="@dimen/_24ssp"
                android:layout_height="@dimen/_24ssp"
                android:src="@drawable/ic_approved_top"
                android:visibility="gone"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_16ssp"
                />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:id="@+id/title"
            android:maxLines="1"
            android:alpha="0.8"
            android:layout_marginStart="@dimen/_12ssp"
            android:fontFamily="@font/poppins"
            android:text="Chairy - daicy li Black"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/_9ssp"
                android:maxLines="1"
                android:layout_marginStart="@dimen/_12ssp"
                android:fontFamily="@font/poppins"
                android:text="$50.00"
                android:alpha="0.6"
                android:textColor="@color/quantum_googgreen900"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="@dimen/_22ssp"
                android:layout_height="@dimen/_22ssp"
                android:visibility="visible"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_12ssp"
                android:src="@drawable/ic_approved"
                 />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>