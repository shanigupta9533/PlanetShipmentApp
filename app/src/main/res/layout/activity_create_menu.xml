<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CreateMenuActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_action_back"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/choose_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@id/back_button"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsmedium"
                android:maxLines="1"
                android:text="Menu"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#dcdcdc" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75ssp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="@dimen/_38ssp"
                    android:layout_height="@dimen/_38ssp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16ssp"
                    android:src="@drawable/ic_agreement_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16ssp"
                    android:layout_toEndOf="@id/image2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsmedium"
                        android:maxLines="1"
                        android:text="Terms And Condition"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:maxLines="1"
                        android:text="Read what you signed"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dcdcdc" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75ssp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="@dimen/_38ssp"
                    android:layout_height="@dimen/_38ssp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16ssp"
                    android:src="@drawable/ic_insurance" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16ssp"
                    android:layout_toEndOf="@id/image3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsmedium"
                        android:maxLines="1"
                        android:text="Privacy Policy"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:maxLines="1"
                        android:text="Compilance and regulations"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dcdcdc" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75ssp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="@dimen/_38ssp"
                    android:layout_height="@dimen/_38ssp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16ssp"
                    android:src="@drawable/ic_contact_us" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16ssp"
                    android:layout_toEndOf="@id/image4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsmedium"
                        android:maxLines="1"
                        android:text="Contact Us"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:maxLines="1"
                        android:text="Facing An Issue? We' re there to help you"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dcdcdc" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/design_as_outlined_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins"
                    android:text="Log Out"
                    android:textColor="@color/quantum_pink"
                    android:textSize="14dp" />

            </RelativeLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30ssp"
                android:src="@drawable/ic_smartphone_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_36ssp"
                android:layout_toEndOf="@id/image4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.9"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_6ssp"
                    android:fontFamily="@font/poppinsmedium"
                    android:maxLines="1"
                    android:text="About Us"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15ssp"
                    android:alpha="0.7"
                    android:layout_marginStart="@dimen/_12ssp"
                    android:layout_marginEnd="@dimen/_12ssp"
                    android:ellipsize="end"
                    android:layout_marginBottom="@dimen/_28ssp"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.  Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>