<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_7ssp"
    app:cardElevation="3dp"
    android:layout_marginBottom="@dimen/_8ssp"
    android:layout_marginStart="@dimen/_6ssp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbfbfb"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/after_delete" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12ssp"
                android:alpha="0.8"
                android:layout_marginEnd="@dimen/_12ssp"
                android:letterSpacing="0.01"
                android:ellipsize="end"
                android:layout_toStartOf="@+id/share"
                android:fontFamily="@font/open_sans_semibold"
                android:maxLines="1"
                android:text="@string/chairy_daicy_li_black"
                android:textColor="@color/quantum_googgreen900"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25ssp"
                android:layout_marginEnd="@dimen/_12ssp"
                android:id="@+id/share"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_action_share"
                app:tint="@color/quantum_googgreen900" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:drawablePadding="-5dp"
            android:layout_marginStart="@dimen/_12ssp"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:letterSpacing="0.01"
            android:maxLines="1"
            android:layout_marginTop="3dp"
            android:text="Planet Home Decor"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginStart="@dimen/_12ssp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.01"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:maxLines="1"
                android:text="No. of items : "
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:layout_gravity="center"
                android:drawablePadding="-5dp"
                android:ellipsize="end"
                android:id="@+id/no_of_items"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:text="2 items"
                android:textColor="@color/black"
                android:textSize="12dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_marginTop="4dp"
                android:paddingStart="-4dp"
                android:layout_marginBottom="@dimen/_9ssp"
                android:alpha="0.6"
                android:drawablePadding="-5dp"
                android:drawableTint="@color/black"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:text="50.00"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:drawableStartCompat="@drawable/ic_action_indian_rupee" />

            <ImageView
                android:layout_width="@dimen/_18ssp"
                android:layout_height="@dimen/_18ssp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_12ssp"
                android:alpha="0.5"
                android:src="@drawable/ic_approved"
                android:visibility="gone"
                app:tint="@color/blue" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>