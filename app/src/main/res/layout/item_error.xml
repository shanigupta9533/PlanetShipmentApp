<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/no_pagination_error_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_middle_margin">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/no_pagination_error_color_separate_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_middle_margin"
        android:layout_marginTop="@dimen/activity_middle_margin"
        android:gravity="center"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsmedium"
        android:text="No Internet Connections ...."/>

    <Button
        android:id="@+id/btnRepeat"
        style="@style/RepeatButtonStyle"
        android:fontFamily="@font/poppinsmedium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35ssp"
        android:text="Refresh"
        android:textAllCaps="false"
        android:textSize="@dimen/_14ssp"
        android:background="@drawable/round_as_button_yellow"
        android:textColor="@color/no_pagination_error_background"/>

</LinearLayout>