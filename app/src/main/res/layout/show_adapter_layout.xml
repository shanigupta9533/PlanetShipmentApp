<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_3ssp"
    app:cardElevation="1dp"
    android:background="#fafafa"
    android:layout_height="190dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fafafa"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_6ssp"
            android:layout_marginEnd="@dimen/_4ssp"
            android:background="#fafafa"
            android:layout_marginStart="@dimen/_12ssp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:letterSpacing="0.01"
                android:layout_gravity="center"
                android:alpha="0.8"
                android:id="@+id/order_no"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:maxLines="1"
                android:text="Order No : 2020202020"
                android:textColor="@color/quantum_googgreen900"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:layout_gravity="center"
                android:drawablePadding="-5dp"
                android:layout_marginEnd="@dimen/_12ssp"
                android:ellipsize="end"
                android:id="@+id/date"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:text="2 items"
                android:textColor="@color/black"
                android:textSize="12dp"
                />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbfbfb"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="110dp"
            android:layout_height="@dimen/_100ssp"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/_12ssp"
            android:adjustViewBounds="true"
            android:src="@drawable/after_delete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_8ssp"
            android:layout_toEndOf="@+id/image_icon"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:layout_gravity="center"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:maxLines="1"
                    android:text="Name : "
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:text="50.00"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_7ssp"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:layout_gravity="center"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:maxLines="1"
                    android:text="Order Date : "
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_6ssp"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:text="50.00"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_7ssp"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:layout_gravity="center"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:maxLines="1"
                    android:text="No. of items : "
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:layout_gravity="center"
                    android:drawablePadding="-5dp"
                    android:ellipsize="end"
                    android:id="@+id/no_of_items"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:text="2 items"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_7ssp"
                android:layout_marginStart="@dimen/_8ssp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.01"
                    android:layout_gravity="center"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:maxLines="1"
                    android:text="Order Status : "
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:layout_gravity="center"
                    android:drawablePadding="-5dp"
                    android:ellipsize="end"
                    android:id="@+id/order_status"
                    android:fontFamily="@font/open_sans"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:text="2 items"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/details_button"
                android:layout_width="@dimen/_100ssp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="@dimen/_8ssp"
                android:background="@drawable/design_as_outlined_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins"
                    android:text="Details"
                    android:textColor="@color/quantum_pink"
                    android:textSize="11dp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>