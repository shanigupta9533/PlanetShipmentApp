<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_of_card"
    app:cardBackgroundColor="#fafafa"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12ssp"
            android:layout_marginEnd="@dimen/_4ssp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:alpha="0.8"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:text="Order No : 2020202020"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_12ssp"
                android:alpha="0.6"
                android:drawablePadding="-5dp"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:visibility="gone"
                android:text="date"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="130dp"
                android:layout_height="@dimen/_100ssp"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_12ssp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/after_delete"
                android:visibility="gone" />

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.8"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:letterSpacing="0.01"
                android:layout_marginStart="@dimen/_8ssp"
                android:maxLines="1"
                android:text="Total Amount : "
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/foreign_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_4ssp"
                android:layout_marginStart="@dimen/_12ssp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:layout_below="@+id/detail_name"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:text="50.00"
                android:textColor="@color/black"
                android:textSize="12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/foreign_name"
                android:layout_marginBottom="@dimen/_12ssp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_21ssp"
                android:id="@+id/parent_of_container"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8ssp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:text="No. of items : "
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/no_of_items"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.6"
                            android:drawablePadding="-5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:text="2 items"
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:text="Item Code : "
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/item_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.6"
                            android:drawablePadding="-5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:text="2 items"
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:text="SapOrderCode : "
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/sapCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:gravity="center"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:text="50.00"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:text="Warehouse : "
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/warehouse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.6"
                            android:drawablePadding="-5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans"
                            android:letterSpacing="0.01"
                            android:maxLines="1"
                            android:text="2 items"
                            android:textColor="@color/black"
                            android:textSize="11dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:id="@+id/divider"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_15ssp"
                android:layout_height="130dp"
                android:background="#eeeeee"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>